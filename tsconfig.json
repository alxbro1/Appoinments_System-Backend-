{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",  // Añadido para configurar la base de las rutas
    "paths": {
      "@/*": ["./*"],  // Ajuste de alias a partir de baseUrl
      "interface/*": ["./interface/*"],
      "middle/*": ["./middleware/*"],
      "env": ["./config/envs.ts"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],  // Asegura que todos los archivos en src estén incluidos
  "files": ["./src/index.ts"]
}
